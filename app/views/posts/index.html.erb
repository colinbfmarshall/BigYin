<div class="container">
  <div class="row">

    <div class="col-md-10 col-md-offset-1">
      <div class="panel">
        <div class="panel-heading">
          <h4><%= @topic.title %> - Posts</h4>
        </div>
        <div class="panel-body">
          
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>User</th>
                <th>Topic</th>
                <th>Live</th>
                <th>Share</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @topic.posts.each do |post| %>
                <tr>
                  <td><%= post.id %></td>
                  <td><%= post.user.email %></td>
                  <td><%= post.topic.title %></td>
                  <td><%= post.live %></td>
                  <td><%= post.share %></td>
                  <td><%= link_to 'Show', topic_post_path(post, post.topic) %></td>
                  <% if owner(post) %>
                  <td><%= link_to 'Edit', edit_topic_post_path(post, post.topic) %></td>
                  <td><%= link_to 'Destroy', topic_post_path(post, post.topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>


        </div>
      </div>
    </div>
  
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
        <%= link_to 'NEW POST', new_topic_post_path, class:'btn btn-flat flat-inverse btn-rounded btn-block' %>

        </div>
      </div>
    </div>
  </div>

</div>