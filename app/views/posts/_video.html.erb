<% content_for :head do %>
  <!-- Schema.org markup for Google+ -->
  <meta itemprop="name" content="Voters' Minute">
  <meta itemprop="description" content="Share your opinion.
Whether it's an election or a referendum, everyone's opinion matters.
Voters' Minute is a simple way to share your opinion.
Pick an issue, record your video and upload it.">
  <!-- <meta itemprop="image" content="http://www.example.com/image.jpg"> -->

  <!-- Twitter Card data -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="Voters Minute">
  <meta name="twitter:title" content="<%= @post.topic.title %>">
  <meta name="twitter:description" content="#myminute #votersminute">
  <!-- Twitter summary card with large image must be at least 280x150px -->
  <meta name="twitter:image:src" content="<%= @post.video_url(:screenshot) %>">

  <!-- Open Graph data -->
  <meta property="og:title" content="Voters Minute" />
  <meta property="og:video" content="<%= @post.video_url(:video) %>" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="<%= @post.video_url(:screenshot) %>" />
  <meta property="og:description" content="<%= @post.topic.title %>" />
  <meta property="og:site_name" content="Voters Minute" />
  <meta property="fb:admins" content="Facebook numberic ID" />
<% end %>

<div class="container">
  <div class="row">

    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="panel" style="text-align:center;border-radius:4px;box-shadow:0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19) !important;">
        <div class="panel-body">

        <h5><%= video.topic.title %></h5>
        <br>
          <% if video.processed %>

            <%= video_tag(video.video_url(:video), controls: true, autobuffer: true, style:"width:100%;height:100%;max-height:350px") %>

          <% else %>
            <h4>Video <%= video.id %> still being processed</h4>
            <br>
          <% end %>

          <%= render partial: '/posts/buttons', locals: { video: @post } %>


          <% if video.user.profile.share == true %>
            <hr>
            <div class="addthis_inline_share_toolbox" style="margin:10px"></div>
          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>


<script type="text/javascript">

  $('#example').tooltip(options)

</script>