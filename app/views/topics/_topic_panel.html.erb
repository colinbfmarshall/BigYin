<div class="col-md-4 col-sm-6 center" >

  <div class="panel panel-default" style="border-radius:4px;box-shadow:0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19) !important;">
    <div class="panel-body">

      <%= image_tag("#{topic.image}", style:'width:100%;height:170px;margin-bottom:10px') %>
      <h4><%= topic.title %></h4>
      <hr>
      <%= link_to 'BROWSE VIDEOS', topic_posts_path(topic), class:'btn btn-flat flat-info btn-rounded btn-sm', style:'margin:5px' %>
      <%= link_to 'ADD VIDEO', new_topic_post_path(topic), class:'btn btn-flat flat-success btn-rounded btn-sm', style:'margin:5px' %>

    </div>
    
  </div>

</div>