<div class="container">

  <p id="notice"><%= notice %></p>  

  <div class="row">
    <% @topics.each do |topic| %>
      <%= link_to topic_posts_path(topic) do %>
        <%= render partial: "topic_panel", object: topic, as: 'topic' %>
      <% end %>
    <% end %>
  </div>


<br>
  <% if current_admin.present? %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to 'NEW TOPIC', new_topic_path, class:'btn btn-flat flat-inverse btn-rounded btn-block' %>
    </div>
  </div>
<% end %>

</div>
