<header class="header">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class:"navbar-brand" do %>Voters'<span> Minute</span>
        <% end %>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>

          <li><%= link_to 'Browse Videos', posts_path %></li>
          <li><%= link_to 'Browse Topics', topics_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account  
              <i class="fa fa-caret-down" aria-hidden="true"></i>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', profile_path(current_user.profile) %></li>
              <li><%= link_to 'Add Video', topics_path %></li>
              <li><%= link_to 'Settings', edit_user_registration_path %></li>
              <li><%= link_to destroy_user_session_path, method: :delete do %>Sign Out<% end %></li>
            </ul>
          </li> 

        <% elsif admin_signed_in? %>
          <li><%= link_to 'USERS', profiles_path %></li>
          <li><%= link_to 'VIDEOS', posts_path %></li>
          <li><%= link_to 'TOPICS', topics_path %></li>
          <li><%= link_to destroy_user_session_path, method: :delete do %>SIGN OUT<% end %></li>

        <% else  %>

          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Browse Videos', posts_path %></li>
          <li><%= link_to 'Browse Topics', topics_path %></li>
          <li><%= link_to 'About', about_path %></li>

        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>


