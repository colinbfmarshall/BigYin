<div class="container">
  <div class="row">

    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="panel" style="border-radius:4px;box-shadow:0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19) !important;">
        <div class="panel-body">

          <p>
            <strong>User:</strong>
            <%= @profile.user.id %>
          </p>

          <p>
            <strong>First name:</strong>
            <%= @profile.first_name %>
          </p>

          <p>
            <strong>Last name:</strong>
            <%= @profile.last_name %>
          </p>

          <p>
            <strong>Age:</strong>
            <%= Age.find_by(id: @profile.age).name %>
          </p>

          <p>
            <strong>Location:</strong>
            <%= City.find_by(id: @profile.location).name %>
          </p>

          <p>
            <strong>Occupation:</strong>
            <%= Occupation.find_by(id: @profile.occupation).name %>
          </p>

<!--           <p>
            <strong>Gender:</strong>
            <% @profile.gender %>
          </p>

          <p>
            <strong>Marital status:</strong>
            <% @profile.marital_status %>
          </p> -->

          <p>
            <strong>Share:</strong>
            <%= @profile.share %>
          </p>

          <p>
            <strong>Videos:</strong>
            <%= @profile.user.posts.count %>
          </p>

        </div>
      </div>
    </div>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
  </div>

  <div class="row">
    <% @profile.user.posts.each do |post| %>
      <%= render partial: "/posts/post", object: post, as: 'post' %>    
    <% end %>

  </div>


</div>