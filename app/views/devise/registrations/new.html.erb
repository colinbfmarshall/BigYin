<div class="col-lg-4 col-lg-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading center">
      <h3>Sign up</h3>
    </div>
    <div class="panel-body">

        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.input :email, autocomplete: "off", input_html: { class: 'form-control' } %>
          </div>

          <div class="form-group">
            <%= f.input :password, autocomplete: "off", input_html: { class: 'form-control' } %>
            <% if @minimum_password_length %>
              <em style="color:grey">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <br />
          </div>

          <div class="form-group">
            <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: 'form-control' } %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-flat flat-success btn-rounded btn-block" %>
          </div>
          <hr>
          <%= render "devise/shared/log_in" %>
        <% end %>
    </div>
  </div>
</div>
